@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Configuration
@using Volo.Abp.Users;

@inject IConfiguration Configuration
@inject ICurrentUser CurrentUser
@using Volo.Abp.AspNetCore.Mvc.UI.Bundling.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewData["Title"]</title>

    <base href="@Url.Content("~/")" />

    <!--Style-->
    <link rel="stylesheet" href="~/lib/vuetify/vuetify.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!--Script-->
    <environment include="Development">
        <script src="~/lib/vue/vue.global.js" asp-append-version="true"></script>
        @* <script src="~/lib/vue-i18n/vue-i18n.global.js" asp-append-version="true"></script> *@
    </environment>
    <environment exclude="Development">
        <script src="~/lib/vue/vue.runtime.global.prod.min.js" asp-append-version="true"></script>
        @* <script src="~/lib/vue-i18n/vue-i18n.runtime.global.prod.min.js" asp-append-version="true"></script> *@
    </environment>

    <script src="~/lib/vuetify/vuetify.min.js" asp-append-version="true"></script>
    <script src="~/lib/axios/axios.min.js" asp-append-version="true"></script>


    @await RenderSectionAsync("headScripts", false)
</head>

<body>
    <div id="myApp">
        <v-app>
            <v-main>
                @RenderBody()
            </v-main>
        </v-app>
    </div>
   <!-- <script src="~/js/site.js" asp-append-version="true"></script> -->
    @await RenderSectionAsync("bodyScripts", false)
</body>

</html>