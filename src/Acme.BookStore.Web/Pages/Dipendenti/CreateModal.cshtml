@page
@using Acme.BookStore.Localization
@using Acme.BookStore.Web.Pages.Dipendenti
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<BookStoreResource> L
@{
    Layout = null;
}
<form asp-page="/Dipendenti/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewDipendente"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Dipendente.Name" />
            <abp-input asp-for="Dipendente.Surname" />
            <abp-input asp-for="Dipendente.BirthDate" />
            <abp-input asp-for="Dipendente.StartDate" />
            <abp-input asp-for="Dipendente.HourlyRate" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>