@page
@using Acme.BookStore.Localization
@using Acme.BookStore.Web.Pages.Commesse
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Acme.BookStore.Commesse
@model CreateModalModel
@inject IStringLocalizer<BookStoreResource> L
@{
    Layout = null;
}
<form asp-page="/Commesse/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCommessa"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Commessa.Nome" />
            <abp-select asp-for="Commessa.Tipologia"
                        asp-items="@Html.GetEnumSelectList<Tipologia>()"
                        label="@L["Tipologia"].Value" />

            <abp-select asp-for="Commessa.ClienteId"
                        asp-items="@Model.ClienteList"
                        label="@L["Cliente"].Value" />
            <abp-input asp-for="Commessa.Totale" />
            @* <abp-input asp-for="Commessa.Dipendenti" /> *@
            <abp-input asp-for="Commessa.IsActive" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>