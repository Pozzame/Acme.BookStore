@page
@using Acme.BookStore.Localization
@using Acme.BookStore.Web.Pages.Commesse
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EditModalModel
@inject IStringLocalizer<BookStoreResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Commessa" asp-page="/Commesse/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            @* <abp-input asp-for="Id" /> *@
                <div class="form-group"> 
                <label for="cliente">@L["Cliente"]</label> 
                <input id="cliente" type="text" class="form-control" value="@Model.ClienteNome" readonly />
            </div>
            <abp-form-content />
            <div class="form-group">
                <label for="dipendente">@L["Dipendente"]</label>
                <select id="dipendente" class="form-control" asp-for="SelectedDipendenteId" asp-items="Model.DipendentiList">
                    <option value="">@L["Select a Dipendente"]</option>
                </select>
            </div>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
